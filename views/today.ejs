<%- include("partials/header.ejs")  %>
<div class="list">
    <div class="heading">
        <h1>
            <%= head %>
        </h1>
    </div>
    

    <% list.forEach(element => { %>
        <form action="/delete" method="post">
        <div class="item">
            <input type="checkbox" name="checkbox" value="<%= element._id %>" onChange="this.form.submit()">
            <p>
                <%= element.name%>
            </p>
        </div>
    </form>
    <% }); %>
    <form action="/today" method="POST">
        
        <input class="text-input" type="text" name="nextTaskToday" placeholder="  next...">
        <button type="submit" name="list" value="<%= head %>">ADD</button>
    </form>
</div>
<%- include("partials/footer.ejs")  %>